<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.tinkoff.example.datastore">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ContentProviderActivity" />

        <activity android:name=".ExternalStorageActivity" />

        <activity android:name=".InternalStorageActivity" />

        <activity android:name=".OrmliteActivity" />

        <activity android:name=".SharedPrefsActivity" />

        <activity android:name=".SqlCipherActivity" />

        <activity android:name=".SqliteActivity" />
    </application>

</manifest>
